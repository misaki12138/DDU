
Page {
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #fff;
}

/* 任务名称部分 */
.event_view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 10%;
}
.event_title {
  font-size: 42.12rpx;
  margin-bottom: 30rpx;
}
.event_input {
  text-align: center;
  font-size: 38rpx;
  color: #5fbea6;
}

/* 时间选择部分 */
.time_view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 30%;
}
.time_title {
  font-size: 42.12rpx;
  margin-bottom: 20rpx;
}
.time_selector {
  text-align: center;
  font-size: 40rpx;
  color: #5fbea6;
}

.submit {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;

  position: absolute;
  top: 50%;
  left: 37%;

  color: #1589eb;
  font-size: 39.78rpx;
  
  height: 93.6rpx;
  width: 187.2rpx;
  border-radius: 46.8rpx;
  border: 2rpx dashed #5fbea6;
  box-shadow: 9.36rpx 14.04rpx 23.4rpx 4.68rpx #ddd;
}

.canvasc {
  position: absolute;
  top: 60%;
  left: 0;
}
