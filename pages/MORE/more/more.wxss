page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.btn-area {
  margin-top: 180rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  height: 80%;
  width: 70%;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.userinfo {
  margin-top: 180rpx;
  height: 200rpx;
  /* width: 80%; */
  background: #fff;
  /* border: 1px solid rgba(0, 0, 0, 0.1); */
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 300ms ease;
}
.btn-item {
  height: 150rpx;
  margin: 20rpx;
  background: #fff;
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  /* margin: 20rpx; */
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.function-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.userinfo-avatar:after, .function-avatar::after {
  border: none;
}

.userinfo-nickname, .function-name {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}
.userinfo-nickname::after, .function-name::after {
  border: none;
}
